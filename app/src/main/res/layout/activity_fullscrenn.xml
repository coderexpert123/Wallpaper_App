<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".FullscrennActivity">
<com.github.chrisbanes.photoview.PhotoView

    android:id="@+id/photoview"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

</com.github.chrisbanes.photoview.PhotoView>

    <Button
        android:id="@+id/downlaodWallapper"
        android:layout_width="match_parent"
        android:onClick="downloadwalllper"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Download Wallpaper"
        android:textSize="20dp">


    </Button>

    <Button
        android:id="@+id/downloadwallaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/downlaodWallapper"
        android:text="Set Wallpaper"
        android:onClick="setwallpaper"
        android:textSize="20dp">


    </Button>


</RelativeLayout>